{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "dist",
    "esModuleInterop": true,
    "outDir": "./dist",
    "jsx": "react-jsx",
    "lib": ["es6", "dom", "es2016", "es2017"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": false,
    "resolveJsonModule": true,
    "rootDir": "./ui",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "types": ["node"],
    "skipLibCheck": true,
  },
  "include": ["ui/**/*"],
  "exclude": ["**/node_modules", "**/build", "**/dist", "**/*.md", "**/rollup.config.js", "node_modules"]
}